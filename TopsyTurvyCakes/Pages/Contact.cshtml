@page
@model TopsyTurvyCakes.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<div class="container">
    <form method="post" class="form-horizontal">
        <div class="form-group">
            <label for="fName" class="col-md-2 control-label">First Name</label>
            <div class="col-md-10">
                <input for="fName" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="lName" class="col-md-2 control-label">Last Name</label>
            <div class="col-md-10">
                <input for="lName" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-md-2 control-label">Email</label>
            <div class="col-md-10">
                <input for="email" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label for="comment" class="col-md-2 control-label">Comment</label>
            <div class="col-md-10">
                <textarea rows="5" for="comment" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn btn-primary">Send</button>
            </div>
        </div>
    </form>
</div>